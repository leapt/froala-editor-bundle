{
    "name": "kms/froala-editor-bundle",
    "type": "symfony-bundle",
    "description": "Provides a Froala editor integration for Symfony 4 & 5.",
    "keywords": [ "froala", "editor", "wysiwyg" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Guionniere",
            "email": "simon.guionniere@gmail.com"
        },
        {
            "name": "Stefan Neculai",
            "email": "stefan.neculai@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-zip": "*",
        "symfony/asset": "^5.3 || ^6.0",
        "symfony/console": "^5.3 || ^6.0",
        "symfony/framework-bundle": "^5.3 || ^6.0",
        "symfony/form": "^5.3 || ^6.0",
        "symfony/http-client": "^5.3 || ^6.0",
        "symfony/string": "^5.3 || ^6.0",
        "symfony/twig-bundle": "^5.3 || ^6.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2.1",
        "phpstan/phpstan": "^0.12.56",
        "phpunit/phpunit": "^9.5.10",
        "symfony/yaml": "^5.3 || ^6.0"
    },
    "scripts": {
        "ci": [
            "@cs:dry",
            "@phpstan",
            "vendor/bin/phpunit"
        ],
        "cs:dry": "php-cs-fixer fix --diff --dry-run --no-interaction --ansi",
        "cs:fix": "php-cs-fixer fix --ansi",
        "phpstan": "vendor/bin/phpstan analyse --ansi"
    },
    "autoload": {
        "psr-4": {
            "KMS\\FroalaEditorBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KMS\\FroalaEditorBundle\\Tests\\": "tests/"
        }
    }
}
